/**index.wxss**/
page {
  background-color: #08C4F5;
}
.container{
  height: 100%;
  box-sizing: border-box;
  width:100%;
  padding-top: 40rpx;
  color: white;
  padding: 10px;
  position: relative;
  background: linear-gradient( #08C4F5, #5F86F2);
  /* background-color: powderblue; */
}
.city{
  font-size: 100rpx;
  font-family: '';
  text-align: center;
  margin-top: 80rpx;
  vertical-align: bottom;
}
.location {
  font-size: 50rpx;
  position: relative;
  top: 8rpx;
  margin-left: 20rpx;
}
.today {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background:rgba(0, 0, 0, .2);
  margin-bottom:20rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
}
.today .today_weather,
.hour .today_weather {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  width: 25%;
  border-right: 1rpx solid #529CCE;
  border-bottom: 1rpx solid #529CCE;
  box-sizing: border-box;
}
.today .today_weather:nth-child(4n),
.hour .detail:nth-child(4n) {
  border-right: none;
}
.today .today_weather:nth-child(n+9),
.hour .today_weather:nth-child(n+9) {
  border-bottom: none;
}
.now_tmp {
  width: 50%
}
.now_airQlty {
  width: 50%;
  display: flex;
  font-size: 30rpx;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
}
.now {
  margin-top: 100rpx;
  display: flex;
}
 
.fWeather .fWeather_aDay {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 30rpx;
  padding-top: 20rpx;
  background: rgba(0, 0, 0, .2);
  margin: 20rpx 0;
  border-radius: 8rpx;
  overflow-x: scroll;
}
.fWeather .title {
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  background: rgba(0, 0, 0, .2);
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.fWeather .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 200rpx;
  flex-shrink: 0;
}
.fWeather image {
  width: 44rpx;
}
.fWeather .paddingB {
  padding-bottom: 20rpx;
}
.fWeather .paddingB{
  display: flex;
  justify-content: center;
  align-items: center;
}
.fWeather .paddingB image {
  width: 40rpx;
  margin-left: 5rpx;
}

.hWeather {
  background: rgba(0, 0, 0, .2);
  font-size: 30rpx;
  padding: 10rpx 0 20rpx 0;
  border-radius: 8rpx;
}
.hWeather_hour {
  height: 40rpx;
  display: flex;
  margin-top: 20rpx;
  justify-content: space-around;
}
.hWeather_hour image {
  width: 40rpx;
  height: 40rpx;
}
.hWeather_hour_pop {
  width: 240rpx;
}
.hWeather_hour_tmp {
  width: 80rpx;
}
.life {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background:rgba(0, 0, 0, .2);
  margin-bottom:20rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
}
.life .life_style {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 140rpx;
  width: 25%;
  border-right: 1rpx solid #558BD1;
  border-bottom: 1rpx solid #558BD1;
  box-sizing: border-box;
}
.life .life_style:nth-child(4n){
  border-right: none;
}
.life .life_style:nth-child(n+9){
  border-bottom: none;
}
.life_icon {
  font-size: 25rpx;
}
.life_icon image{
  height: 40rpx;
  width: 40rpx;
  margin-left: 10rpx;
  position: relative;
  top: 10rpx;
} 
.copyright{
  font-size:25rpx;
  text-align:center;
}
